{
  "name": "myworkdriveclient",
  "private": true,
  "version": "0.8.0",
  "scripts": {
    "start": "xmlui start --withMock=false",
    "start:backend": "cd backend/ClientAPIServer && dotnet run",
    "start:dev": "npm run start & npm run start:backend",

    "start:backend-windows": "node scripts/start-backend.js",
    "start:dev-windows": "npm run start:backend-windows && npm run start",

    "build": "xmlui build",
    "preview": "xmlui preview",
    "build-prod": "npm run build -- --prod --withMock=true",
    "release-ci": "npm run build -- --withMock --withHostingMetaFiles && xmlui zip-dist",
    "release-prod": "npm run build-prod && xmlui zip-dist"
  },
  "dependencies": {
    "xmlui": "*"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "vite": "^7.1.12"
  }
}
