<!--
  This component is used to display a message when a drive or folder is empty.
-->
<Component name="EmptyDataView">
  <CVStack
    gap="$gap-tight"
    padding="$padding-loose"
    testId="empty-folder-view"
    height="100%"
    verticalAlignment="center"
    horizontalAlignment="center"
  >
    <Icon name="info_circle" width="$space-12" height="$space-12" />
    <Text fontWeight="600">
      This folder is empty.
    </Text>
  </CVStack>
</Component>
