<!-- 
  A menu item for sorting options

  Properties:
    label: The label of the menu item
    checked: Whether the menu item is checked
-->
<Component name="SortingMenuItem">
  <MenuItem onClick="emitEvent('click')">
    <HStack gap="$space-tight" verticalAlignment="center">
      <Icon when="{$props.checked}" width="16px" name="checkmark"/>
      <Stack when="{!$props.checked}" width="16px"/>
      {$props.label}
    </HStack>
  </MenuItem>
</Component>